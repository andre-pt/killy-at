<div class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <div class="row">
      <div class="col-lg-1 col-sm-12 text-center">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="navbar-logo">
            <a href="/"><img class="logo" src="/img/logo.png"></a>
          </div>
        </div>
      </div>
      <div class="col-lg-11 col-sm-12">
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <%
              for (var i in site.data.menu) { 
                if (site.data.menu[i] !== null) {
                  // menu with dropdown
                  %>
                    <li class="dropdown">
                      <a href class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%=__('menu.' + i) %></a>
                      <ul class="dropdown-menu dropdown-menu-left">
                  <%

                  for (var j in site.data.menu[i]) {
                    %>
                      <li>
                        <a href="<%- url_for(__('menu.' + j + '.url')) %>"><%=__('menu.' + j) %></a>
                      </li>
                    <%
                  }
                  %>
                      </ul>
                    </li>
                  <%
                }
                else {
                  // simple menu entry
                  %>
                    <li>
                      <a href="<%- url_for(__('menu.' + i + '.url')) %>"><%= __('menu.' + i) %></a>
                    </li>
                  <%
                }
              }
            %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>